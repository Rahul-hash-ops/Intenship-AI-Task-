def chatbot():
    print("Chatbot: Hello! Type 'bye' to exit.")

    while True:
        user = input("You: ").lower()

        if user in ["hi", "hello"]:
            print("Chatbot: Hello! How can I help you?")
        elif "name" in user:
            print("Chatbot: I am a simple AI chatbot.")
        elif "help" in user:
            print("Chatbot: I can answer basic questions.")
        elif "time" in user:
            import datetime
            print("Chatbot:", datetime.datetime.now().strftime("%H:%M:%S"))
        elif user == "bye":
            print("Chatbot: Goodbye!")
            break
        else:
            print("Chatbot: Sorry, I didn't understand that.")

chatbot()
